{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./app/*"]
    }
  },
  "include": [
    "app/**/*.ts",
    "app/**/*.d.ts",
    "app/**/*.tsx",
    "app/**/*.vue",
    "src/packages/**/*.ts",
    "src/packages/**/*.d.ts",
    "src/packages/**/*.tsx",
    "src/packages/**/*.vue",
    "src/runtime/**/*.ts",
    "src/module.ts",
    "components.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
